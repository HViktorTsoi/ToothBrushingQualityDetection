<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="cjh.recorder.MainActivity">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtPositionStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@mipmap/outerig" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@mipmap/outer_background" />

        <ImageView
            android:id="@+id/outer_ufo"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <ImageView
            android:id="@+id/outer_dfo"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <ImageView
            android:id="@+id/outer_urb"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <ImageView
            android:id="@+id/outer_ulb"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <ImageView
            android:id="@+id/outer_drb"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <ImageView
            android:id="@+id/outer_dlb"
            android:layout_width="250dp"
            android:layout_height="250dp" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@mipmap/innerig" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@mipmap/inner_background" />

        <ImageView
            android:id="@+id/inner_ufi"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <ImageView
            android:id="@+id/inner_dfi"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <ImageView
            android:id="@+id/inner_urbi"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <ImageView
            android:id="@+id/inner_ulbi"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <ImageView
            android:id="@+id/inner_drbi"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <ImageView
            android:id="@+id/inner_dlbi"
            android:layout_width="250dp"
            android:layout_height="250dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:drawableStart="@mipmap/tooth"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:id="@+id/audiorecorder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_success"
            android:text="@string/display_start"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
    </LinearLayout>

</LinearLayout>
